#Themeded dropdown
<ThemedSpinnerDropdown@SpinnerDropdown>:
	background_normal: ""
	background_down: ""
	background_color: 0,0,0,0
	border : (0,0,0,0)
	auto_dismiss: True
	max_height: dp(240)

	canvas.before:
		# Outer subtle shadow
		Color:
			rgba: rgba("#1E293BFF")
		RoundedRectangle:
			pos: self.x - dp(3), self.y - dp(3)
			size: (self.width + dp(6), self.height + dp(6))
			radius: [18,18,18,18]
		# main background
		Color:
			rgba: rgba("#0F172AFF")
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [14,14,14,14]
		# inner accent
		Color:
			rgba: rgba("#1E293BFF")
		RoundedRectangle:
			pos: self.x + dp(1), self.y + dp(1)
			size: (self.width - dp(2), self.height - dp(2))
			radius: [12,12,12,12]

#Your Spinner 
