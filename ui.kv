<AccentButton@Button>:
	size_hint: None,None
	height: dp(44)
	width: dp(160)
	background_normal: ""
	background_color: rgba("#2D3436")
	color:rgba("#FFFFFF")
	font_size: sp(16)
	bold: True
	radius: [22,22,22,22]

<MetricCard@BoxLayout>:
	orientation: "vertical"
	padding: dp(16)
	spacing: dp(6)
	size_hint_y: None
	height: dp(120)
	metric_title: "Metric"
	metric_value: "0.00"
	metric_caption: ""
	bg_color: rgba("#FFFFFF")
	canvas.before:
		Color:
			rgba: root.bg_color if root.bg_color else rgba("#FFFFFF")
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [18,18,18,18]
	Label:
		text: root.metric_title
		size_hint_y: None
		height: self.texture_size[1]
		color: rgba("#C5CAE9FF")
		font_size: sp(14)
		bold: True
	Label:
		text: root.metric_value
		color: rgba("#FFFFFF")
		font_size: sp(20)
	Label:
		text: root.metric_caption
		color: rgba("#AAB6FEFF")
		font_size: sp(12)


