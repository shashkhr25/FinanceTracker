#:import rgba kivy.utils.get_color_from_hex
#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<DashboardScreen>:
    name: 'dashboard'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        
        Label:
            text: 'Dashboard'
            font_size: sp(24)
            color: rgba("#FFFFFF")
            size_hint_y: None
            height: dp(40)
        
        Button:
            text: 'Go to Shared Expenses'
            size_hint_y: None
            height: dp(50)
            on_release: app.root.current = 'shared_expenses'

<SharedExpensesScreen>:
    name: 'shared_expenses'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        
        Label:
            text: 'Shared Expenses'
            font_size: sp(24)
            color: rgba("#FFFFFF")
            size_hint_y: None
            height: dp(40)
        
        Button:
            text: 'View Transaction Details'
            size_hint_y: None
            height: dp(50)
            on_release: 
                app.root.current = 'transaction_detail'
        
        Button:
            text: 'Back to Dashboard'
            size_hint_y: None
            height: dp(50)
            on_release: app.root.current = 'dashboard'

<TransactionDetailScreen>:
    name: 'transaction_detail'
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        
        Label:
            text: 'Transaction Details'
            font_size: sp(24)
            color: rgba("#FFFFFF")
            size_hint_y: None
            height: dp(40)
        
        Label:
            text: 'Transaction details will appear here'
            font_size: sp(16)
            color: rgba("#CCCCCC")
        
        Button:
            text: 'Back to Shared Expenses'
            size_hint_y: None
            height: dp(50)
            on_release: app.root.current = 'shared_expenses'

<MoneyTrackerApp>:
    MoneyTrackerScreenManager:
        DashboardScreen:
        SharedExpensesScreen:
        TransactionDetailScreen:
